{
  "name": "@griseo.js/brush",
  "version": "1.0.0",
  "description": "a brush to paint beautifully formatted strings 🖌️",
  "license": "MIT",
  "homepage": "https://elysium-everlasting.github.io/griseo.js/brush",
  "funding": "https://github.com/Elysium-Everlasting/griseo.js",
  "contributors": [
    {
      "name": "ap0nia",
      "email": "",
      "url": "https://github.com/ap0nia"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Elysium-Everlasting/griseo.js.git",
    "directory": "packages/brush"
  },
  "bugs": {
    "url": "https://github.com/Elysium-Everlasting/griseo.js/issues"
  },
  "keywords": [
    "colors",
    "terminal",
    "console",
    "cli",
    "string",
    "ansi",
    "styles",
    "tty",
    "formatting",
    "rgb",
    "shell",
    "text"
  ],
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs",
      "default": "./dist/node.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "default": "./dist/browser.js"
    }
  },
  "typesVersions": {
    "*": {
      "ansi": [
        "./dist/ansi.d.ts"
      ],
      "sgr": [
        "./dist/sgr.d.ts"
      ],
      "color-support/*": [
        "./dist/color-support/*.d.ts"
      ]
    }
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest",
    "prepublish": "pnpm run build"
  },
  "dependencies": {
    "@griseo.js/palette": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^7.1.0",
    "tsx": "^3.12.7"
  },
  "packageManager": "pnpm@8.6.11",
  "engines": {
    "pnpm": "^8.0.0",
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
